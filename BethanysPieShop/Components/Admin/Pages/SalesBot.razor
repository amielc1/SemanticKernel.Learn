@page "/admin/salesbot"

@rendermode InteractiveServer

@using BethanysPieShop.Model
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "Administrator")]

<h3>Bethany's Pie Shop Sales Bot</h3>
<br />
<h4>Ask a question about sales like "Please compare sales of January 2024 with January 2025."</h4>
<div class="form-group">
    <textarea id="questionTextArea" @bind="Question" class="form-control m-2" placeholder="Enter your question here..."></textarea>
</div>
<div>
    <button class="btn btn-primary" @onclick="OnEnterQuestion">Ask Bethany's Sales Bot</button>
</div>
<div class="mt-3">
    <p>@Message</p>
</div>