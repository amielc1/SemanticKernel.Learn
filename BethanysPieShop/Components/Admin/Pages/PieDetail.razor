@page "/admin/piedetail/{pieId:int}"

@attribute [Authorize(Roles = "Administrator")]

@using Microsoft.AspNetCore.Authorization

<h3>@Pie.Name</h3>

<div class="col-12 row">
    <div class="col-2 text-center">
        <img src="@Pie.ImageUrl" class="img-fluid" width="500" />
    </div>
    <div class="col-10 row">
        <div class="col-12 col-xxl-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Pie ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Pie.Id</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Pie.Name</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Short description</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Pie.ShortDescription</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Long description</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Pie.LongDescription</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Pie of the week</label>
                <div class="col-sm-8">

                    @if (Pie.IsPieOfTheWeek)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
