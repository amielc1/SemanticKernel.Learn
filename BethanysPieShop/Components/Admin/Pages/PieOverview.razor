@page "/admin/managepies"
@using Microsoft.AspNetCore.Authorization


@attribute [Authorize(Roles = "Administrator")]

<h3>Pie overview</h3>

<a href="admin/pieadd" class="btn btn-outline-primary btn-sm mb-1">
    Add new pie
</a>

@if (Pies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-light">
        <thead class="table-primary">
            <tr>
                <th></th>
                <th>Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pie in Pies)
            {
                <tr>
                    <td><img src="@pie.ImageUrl" width="100" /></td>
                    <td>@pie.Name</td>
                    <td>@pie.Price</td>

                    <td>
                        <a href="@($"admin/piedetail/{pie.Id}")" class="btn btn-outline-primary btn-sm mb-1">
                            Details
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}